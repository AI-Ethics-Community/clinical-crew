# =============================================================================
# GOOGLE GEMINI CONFIGURATION
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_PRO_MODEL=gemini-2.5-pro-latest
GEMINI_FLASH_MODEL=gemini-2.5-flash-latest
GEMINI_TEMPERATURE=0.1
GEMINI_MAX_OUTPUT_TOKENS=8192
GEMINI_TOP_P=0.95
GEMINI_TOP_K=40

# =============================================================================
# DATABASE CONFIGURATION (MongoDB)
# =============================================================================
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=hacknation_medical
MONGODB_MAX_CONNECTIONS=10
MONGODB_MIN_CONNECTIONS=1

# =============================================================================
# VECTOR STORE (ChromaDB)
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./data/vectorstore
CHROMA_COLLECTION_PREFIX=medical_kb
CHROMA_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# RAG CONFIGURATION
# =============================================================================
# RAG_MIN_RELEVANCE_SCORE: Minimum similarity score (0.0-1.0) to include a document
#   - 0.2-0.25: High recall (more documents, some may be less relevant)
#   - 0.3:      RECOMMENDED - Balanced precision/recall for medical context
#   - 0.4-0.5:  High precision (fewer documents, only highly relevant)
RAG_MIN_RELEVANCE_SCORE=0.3

# RAG_TOP_K: Number of document chunks to retrieve per query
#   - 3:   Fast, minimal context (good for simple queries)
#   - 5:   RECOMMENDED - Balanced coverage for most medical questions
#   - 10:  Comprehensive context (for complex multi-faceted questions)
RAG_TOP_K=5

# =============================================================================
# PUBMED/NCBI CONFIGURATION
# =============================================================================
PUBMED_EMAIL=your_email@example.com
PUBMED_API_KEY=
PUBMED_MAX_RESULTS=10
PUBMED_TOOL_NAME=ClinicalCrew

# Advanced PubMed Settings
PUBMED_REQUEST_TIMEOUT=15        # Timeout per individual request (seconds)
PUBMED_TOTAL_TIMEOUT=60          # Total timeout including all retries (seconds)
PUBMED_RETRY_MAX_ATTEMPTS=3
PUBMED_RETRY_BACKOFF_FACTOR=2.0
PUBMED_BATCH_SIZE=50
PUBMED_USE_MESH_EXTRACTION=true  # Use AI-powered MeSH term extraction
PUBMED_MIN_YEAR=2015             # Only retrieve articles from this year onwards
PUBMED_MAX_YEAR=2025

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_V1_PREFIX=/api/v1
API_TITLE=Clinical Crew
API_VERSION=1.0.0
API_DESCRIPTION=Sistema de interconsulta m√©dica con IA multi-agente
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================
MAX_INTERCONSULTAS_PARALELAS=5
TIMEOUT_ESPECIALISTA_SEGUNDOS=120
ENABLE_STREAMING=true
MAX_RETRIES=3

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# =============================================================================
# SECURITY (para futuras implementaciones)
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
